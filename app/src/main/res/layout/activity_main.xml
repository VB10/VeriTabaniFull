<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.vb.veritabanifull.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/et_Ad"
            android:hint="Ad" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/et_Soyad"
            android:hint="Soyad" />

        <Button
            android:text="Ogrenci Ekle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_ADD"
            android:onClick="clicked" />

        <Button
            android:text="Ogrenci Sil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_DELETE"
            android:onClick="clicked" />

        <Button
            android:text="Ogrenci Guncelle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_UPDATE"
            android:onClick="clicked" />

        <Button
            android:text="Ogrenci Listele"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_List"
            android:onClick="clicked" />

        <TextView
            android:text="Buraya kayÄ±tlar gelecek"
            android:layout_width="match_parent"
            android:layout_height="198dp"
            android:id="@+id/txtListe"
            android:textAlignment="center"
            android:textStyle="normal|bold"
            android:textSize="24sp" />

        <Button
            android:text="Temizle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button5"
            android:onClick="temizle"/>
    </LinearLayout>

</RelativeLayout>
